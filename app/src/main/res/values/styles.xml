<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="ToolbarCustom" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="ToolbarCustom.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="TextViewHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_header</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextViewDesc" parent="TextViewHeader">
        <item name="android:background">@color/appColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
